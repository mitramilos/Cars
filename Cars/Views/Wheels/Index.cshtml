@model IEnumerable<Cars.Models.Wheels>

@{
    ViewData["Title"] = "Index";
}

<h2>Wheels</h2>
<hr />



<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                <a asp-action="AddOrEdit" type="button" class="btn btn-success">Create New</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Session)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Size)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.ID_Whells" class="btn btn-primary">Edit</a> |
               
                <a asp-action="Delete" asp-route-id="@item.ID_Whells"  class="btn btn-danger" onclick="return confirm('Are you sure to delete this wheel?')">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
